@model Workout;

<div class="d-flex justify-content-between mb-5">
    <h1 class="t text-light">@Model.Name</h1>
    <div class="d-flex gap-3 align-items-center">
        <button class="btn btn-outline-warning"><a asp-action="EditWorkout" asp-controller="Workout"
                asp-route-id="@Model.WorkoutId" style="color: inherit; text-decoration: none;">Edit</a></button>
        <form asp-action="DestroyWorkout" asp-controller="Workout" asp-route-id="@Model.WorkoutId">
            <button type="submit" class="btn btn-outline-danger ">Remove</button>
        </form>
    </div>
</div>

<h4 class="text-center text-light mb-5">Exercises</h4>
<table class="table table-secondary table-striped table-bordered">
    <thead class="text-center">
        <th scope="col" class="px-3">Name</th>
        <th scope="col" class="px-3">Sets</th>
        <th scope="col" class="px-3">Reps</th>
        <th scope="col" class="px-3">Description</th>
    </thead>
    <tbody>
        @{
            foreach (Exercise e in Model.MyExercises)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Sets</td>
                    <td>@e.Reps</td>
                    <td>@e.Notes</td>
                </tr>
            }
        }
    </tbody>
</table>