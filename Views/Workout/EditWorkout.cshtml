
@model Workout

<h1 class="text-light text-center mt-3">@Model.Name</h1>
<div class="d-flex gap-5 mt-4">
    <div class="me-5">
        @{Exercise passThrough = new Exercise();}
        @{passThrough.WorkoutId = Model.WorkoutId;}
        @await Html.PartialAsync("_ExerciseForm", passThrough)
    </div>
    <div class="flex-grow-1 ms-5 d-flex flex-column">
        <h3 class="text-center text-light">Exercises</h3>
        <table class="table table-dark table-striped table-bordered" id="table">
            <thead class="text-center">
                <th scope="col" class="p-3">Name</th>
                <th scope="col" class="p-3">Description</th>
                <th scope="col" class="p-3">Actions</th>
            </thead>
            <tbody>
                @{
                    foreach(Exercise e in Model.MyExercises) 
                    {
                        <tr>
                            <td class="p-3">@e.Name</td>
                            <td class="p-3">@e.Description</td>
                            <td class="text-center p-3"><form asp-action="DestroyExercise" asp-controller="Workout" asp-route-id="@e.ExerciseId"><button type="submit" style="border: none; background-color: inherit;"><i class="fa-solid fa-trash-can-arrow-up fa-2xl text-light"></i></button></form></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>