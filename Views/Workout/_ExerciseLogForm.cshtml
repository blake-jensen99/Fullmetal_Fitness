@{
    #pragma warning disable CS8600
    #pragma warning disable CS8602
    #pragma warning disable CS8605
}

@model ExerciseLog

@{DateOnly date = DateOnly.FromDateTime(DateTime.Now);}
@{String dateS = date.ToShortDateString();}

@{List<Exercise> exercises = (List<Exercise>)ViewData["exercises"];}

@{int id = (int)ViewData["id"];}

<form asp-action="LogExercise" asp-controller="Workout" asp-route-id="@id" method="post">
    <td class="p-3">
        <select asp-for="Name" class="form-select">
            @{
                foreach (Exercise e in exercises)
                {
                    <option value="@e.Name">@e.Name</option>
                }
            }
        </select>
    </td>
    <td class="p-3"><input asp-for="Reps" class="form-control"><span asp-validation-for="Reps"></span></td>
    <td class="p-3"><input asp-for="Weight"  class="form-control"><span asp-validation-for="Weight"></span></td>
    <td class="p-3"><input asp-for="Date" value="@date"  class="form-control"><span asp-validation-for="Date"></span></td>
    <input type="hidden" name="WorkoutId" value="@id">
    <td class="text-center p-3">
        <button type="submit" style="border: none; background-color: initial;"><i class="fa-solid fa-plus fa-2xl text-light"></i></button>
        </td>
</form>
